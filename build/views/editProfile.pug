extends layouts/main.pug

block content
  .form-container
    form(action=`${routes.users}${routes.editProfile}` method="post" enctype="multipart/form-data")
      .fileUpload
        label(for="avatar") Avatar
        input(type="file" id="avatar" name="avatar" accept="image/*")
      input(type="text" name="name" placeholder="Name" value=user.name required=true)
      input(type="email" name="email" placeholder="Email" value=user.email required=true)
      input(type="submit" value="Update Profile")
    a.form-container__link.form-container__link--edit(href=`${routes.users}${routes.changePassword}`) 
      button Change Password