header.header
  .header__wrapper
    .header__column 
      a(href=routes.home)
        i.fab.fa-youtube
    .header__column
      form(method="get" action=routes.search)
        input(type="text" placeholder="Search by term..." name="term")
    .header__column
      ul
        if !loggedUser
          li
            a(href=routes.join) Join
          li
            a(href=routes.login) Log In
        else
          li
            a(href=`${routes.videos}${routes.upload}`) Upload
          li
            a(href=`${routes.users}${routes.me}`) Profile
          li
            a(href=routes.logout) LogOut